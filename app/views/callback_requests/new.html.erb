<%= provide(:title, t('.title')) %>

<!-- Contacts -->
<%= render 'shared/error_messages', object: @callback_request %>

<section class="contacts-wrap">
  <div class="container">
    <div class="contacts">
      <h1 class="contacts-head">
        <%= t('.head') %>
      </h1>
      <div class="row">
        <div class="col-sm-6">
          <div class="contacts-items">
            <div class="contacts-item">
              <i class="icon-footer-location"></i>
              <p><%= t('.address') %></p>
            </div>
            <div class="contacts-item">
              <i class="icon-phone"></i> <a href="tel:74951152864">+7 495 115-28-64</a>
            </div>
            <div class="contacts-item">
              <i class="icon-email-calculator-active"></i> <a href="mailto:info@binaryblitz.ru">info@binaryblitz.ru</a>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <%= form_for @callback_request, html: { class: 'form' } do |f| %>
            <%= f.text_field :name, placeholder: true, required: true %>
            <%= f.email_field :email, placeholder: true, required: true %>
            <%= f.phone_field :phone_number, placeholder: true %>
            <%= f.text_area :content, placeholder: true %>
            <%= f.submit class: 'btn' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
