<%= provide(:title, t('.title')) %>

<% cache do %>
  <!-- Project -->
  <section class="project-wrap sportup">
    <div class="container">
      <div class="row">
        <div class="project">
          <div class="col-sm-7">
            <a class="project-back" href="/projects"><i class="icon-back-w"></i> <%= t('projects.back') %></a>
            <div class="project-type">
              <%= t('projects.types.app') %>
            </div><img alt="" class="project-logo" src="/images/projects/sportup/sportup-logo.png">
            <h2 class="project-head">
              <%= t('.head') %>
            </h2>
            <p class="project-descr">
              <%= t('.description') %>
            </p>
            <div class="project-links">
              <a href="#"><img alt="" src="/images/app-store.png"></a>
              <a href="#"><img alt="" src="/images/google-play.png"></a>
            </div>
          </div>
          <div class="col-sm-5">
            <div class="project-img">
              <img alt="" src="/images/projects/sportup/sportup-iphone.png" height="550">
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- App -->
  <section class="app-wrap">
    <div class="container">
      <div class="app">
        <div class="row">
          <div class="col-sm-6">
            <h2 class="app-head head">
              <%= t('projects.about') %>
            </h2>
            <%= simple_format t('.about') %>
          </div>
          <div class="col-sm-6">
            <div class="app-images">
              <img alt="" src="/images/projects/sportup/sportup-screen-01.png"> <img alt="" src="/images/projects/sportup/sportup-screen-02.png">
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Tech -->
  <section class="tech-wrap">
    <div class="container">
      <div class="tech">
        <h2 class="tech-head head">
          <%= t('projects.technologies.head') %>
        </h2>
        <div class="row">
          <%= render 'projects/technologies/rails' %>
          <%= render 'projects/technologies/swift' %>
          <%= render 'projects/technologies/kotlin' %>
        </div>
      </div>
    </div>
  </section>
<% end %>
